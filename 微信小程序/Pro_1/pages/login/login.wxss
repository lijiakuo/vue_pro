/* pages/login/login.wxss */
page{
  width: 100%;
  height: 100%;
  background:lightblue;
}
.login-box{
  display: block;
  margin: 0 auto;
  width: 80%;
  height: auto;
  background: #fff;
}
.section__title{
  width: 100%;
  height: 60px;
  line-height: 60px;

  text-align: center;
}
.section__title image{
  width: 80%;
  height: 40px;
  vertical-align: middle
}
.sections{
  width: 100%;
  height: 40px;
  padding: 0 10px;
  box-sizing: border-box;
}
.sections input{
  border:1px solid #ccc;
  border-radius: 20px;
  text-indent: 1em;
}
.btn-area{
  width: 100%;
 
  padding: 0 10px;
 
  box-sizing: border-box;
}
.btn-area button{
  background: blue;
  border-radius: 20px;
   height: 40px;
  line-height: 40px;
  color: #fff;
   font-size: 12px;
   
}